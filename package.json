{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.0.0"
  },
  "packageManager": "yarn@4.12.0",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "yarn test && yarn test:e2e",
    "format": "prettier --write \"./**/*.{ts,tsx,js,jsx,json}\"",
    "analyze": "source-map-explorer 'build/assets/*.js'",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx} && tsc --noEmit",
    "lint:fix": "eslint src/**/*.{js,jsx,ts,tsx} --fix && tsc --noEmit",
    "lint:types": "tsc --noEmit",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "browserslist:update": "npx update-browserslist-db@latest",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.css": ["stylelint --fix", "prettier --write"],
    "*.json": ["prettier --write"]
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "classnames": "^2.5.1",
    "html-react-parser": "^5.2.11",
    "react": "^18.3.1",
    "react-animate-on-scroll": "^2.1.9",
    "react-dom": "^18.3.1",
    "react-inlinesvg": "^4.2.0",
    "swiper": "^12.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@playwright/test": "^1.48.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^4.0.16",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.38",
    "prettier": "^3.5.2",
    "prettier-eslint": "^16.1.2",
    "prettier-plugin-css-order": "^2.1.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "source-map-explorer": "^2.5.2",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^4.0.16"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  }
}
